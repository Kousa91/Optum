    <script>
        function generateAction() {
            const pluralNoun = document.getElementById('action-plural-noun').value;
            const occupation = document.getElementById('action-occupation').value;
            const adjective1 = document.getElementById('action-adjective1').value;
            const noun1 = document.getElementById('action-noun1').value;
            const name = document.getElementById('action-name').value;
            const adjective2 = document.getElementById('action-adjective2').value;
            const pluralNoun2 = document.getElementById('action-plural-noun2').value;
            const verbIng = document.getElementById('action-verb-ing').value;
            const adjective3 = document.getElementById('action-adjective3').value;
            const place = document.getElementById('action-place').value;
            const villainName = document.getElementById('action-villain-name').value;
            const noun2 = document.getElementById('action-noun2').value;
            const event = document.getElementById('action-event').value;
            const abstractNoun = document.getElementById('action-abstract-noun').value;

            const result = `In a world where the office is under siege by a rogue team of ${pluralNoun}, only one ${occupation} can save the day. Armed with nothing but a ${adjective1} stapler and a ${noun1} full of coffee, ${name} must navigate the ${adjective2} cubicles and survive the ${pluralNoun2} of HR. With the clock ticking and the Wi-Fi ${verbIng}, our hero must team up with a ${adjective3} intern and a mysterious remote worker from ${place}. Together, theyâ€™ll face off against the evil CEO, ${villainName}, in a final showdown atop the ${noun2} tower. Will they make it to the ${event} in time, or will the office fall into ${abstractNoun}?`;

            document.getElementById('action-result').innerText = result;
        }

        function generateComedy() {
            const name = document.getElementById('comedy-name').value;
            const occupation = document.getElementById('comedy-occupation').value;
            const pluralNoun = document.getElementById('comedy-plural-noun').value;
            const adjective = document.getElementById('comedy-adjective').value;
            const verbIng = document.getElementById('comedy-verb-ing').value;
            const place = document.getElementById('comedy-place').value;
            const pluralNoun2 = document.getElementById('comedy-plural-noun2').value;
            const event = document.getElementById('comedy-event').value;
            const number = document.getElementById('comedy-number').value;
            const animal = document.getElementById('comedy-animal').value;
            const noun = document.getElementById('comedy-noun').value;
            const verbIng2 = document.getElementById('comedy-verb-ing2').value;

            const result = `Meet ${name}, a quirky ${occupation} whoâ€™s just trying to survive another day of Zoom calls, pajama pants, and ${pluralNoun}. But when their cat accidentally sends a ${adjective} email to the entire company, chaos ensues! With their boss ${verbIng} from a beach in ${place} and their coworkers arguing over the best brand of ${pluralNoun2}, itâ€™s up to ${name} to fix everything before the big ${event}. Featuring a cast of ${number} eccentric colleagues, a surprise visit from a ${animal}, and a dramatic reenactment of the ${noun} incident of 2020, this workplace comedy will have you ${verbIng2} in your ergonomic chair.`;

            document.getElementById('comedy-result').innerText = result;
        }

        function generateDrama() {
            const abstractNoun = document.getElementById('drama-abstract-noun').value;
            const emotion = document.getElementById('drama-emotion').value;
            const verbIng = document.getElementById('drama-verb-ing').value;
            const name = document.getElementById('drama-name').value;
            const occupation = document.getElementById('drama-occupation').value;
            const name2 = document.getElementById('drama-name2').value;
            const noun = document.getElementById('drama-noun').value;
            const beverage = document.getElementById('drama-beverage').value;
            const place = document.getElementById('drama-place').value;
            const abstractNoun2 = document.getElementById('drama-abstract-noun2').value;

            const result = `The office was once a place of ${abstractNoun}, but now itâ€™s filled with whispers of ${emotion} and the sound of keyboards ${verbIng}. ${name}, a once-celebrated ${occupation}, is on the verge of burnout. As the final deadline looms, tensions rise between ${name} and their longtime rival, ${name2}, over a missing ${noun}. Secrets are revealed in the break room, alliances are formed over ${beverage}, and the line between work and life begins to blur. With a promotion on the line and a mysterious message from a remote worker in ${place}, ${name} must confront their past, their inbox, and the meaning of ${abstractNoun2}.`;

            document.getElementById('drama-result').innerText = result;
        }

        function generateSciFi() {
            const noun = document.getElementById('scifi-noun').value;
            const adjective = document.getElementById('scifi-adjective').value;
            const verb = document.getElementById('scifi-verb').value;
            const name = document.getElementById('scifi-name').value;
            const occupation = document.getElementById('scifi-occupation').value;
            const place = document.getElementById('scifi-place').value;
            const abstractNoun = document.getElementById('scifi-abstract-noun').value;
            const pluralNoun = document.getElementById('scifi-plural-noun').value;
            const adjective2 = document.getElementById('scifi-adjective2').value;
            const event = document.getElementById('scifi-event').value;

            const result = `In the year 2050, the office has transformed into a ${noun} of ${adjective} technology. ${name}, a ${occupation}, must ${verb} through the challenges of working from ${place}. As they navigate the complexities of ${abstractNoun}, they encounter a group of ${pluralNoun} who have infiltrated the office. With the help of a ${adjective2} AI assistant, ${name} must prevent the ${event} from disrupting the entire galaxy.`;

            document.getElementById('scifi-result').innerText = result;
        }
